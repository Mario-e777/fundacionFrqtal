{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    /* Overrides or Additions */
    "baseUrl": ".",                      /* Base para resolver rutas relativas */
    "paths": {
      "@components/*": ["src/components/*"],
      "@utils/*": ["src/utils/*"],
      "@styles/*": ["src/styles/*"],
      "@assets/*": ["src/assets/*"],
      "@layouts/*": ["src/layouts/*"],
    },
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}